body
    font-size: 20
    .main-wrapper
        max-width 80vw
        min-width 510px
        height 800px
        margin 10px auto
        display flex
        flex-direction column
        .content-wrapper
            // height 450px
            width 100%
            display flex
            flex-direction column
            background-color $content_bgColor

@media (max-width: 756px)
    body
        .main-wrapper
            max-width: 100vw
            min-width: 100vw
            height: 100vh
            margin: 0
            .navbar
                height: 60px
                max-width: 100%
                overflow: hidden
                .tabs
                    width 100%
            .content-wrapper
                height: 100%
                .tabWindow
                    height: 100%
                .content-header
                    overflow: hidden
                    height: 5%
                .content
                    height: 95%
                    .chart-footer
                        display: none
                .content-footer
                    display: none