




 #powerWindow
    height: 100%
    .overlay
        .option
            background $header_btn_bgColor
            color $header_btn_fColor
            font-size 1em
            border 0.1rem solid $header_btn_borderColor
            font-size 0.8em
            border-radius 5%
            padding 0.4rem 0.4rem 0.2rem 0.4rem
            transition background 0.3s ease, color 0.3s ease
            //margin-left 1em
            &:hover
                background $header_btn_hi_bgColor
                color $header_btn_hi_fColor
                border 0.1rem solid $header_btn_hi_borderColor
                
    .content-header
        .formatOptions
            position absolute
            left 0
        .dispOptions
            position absolute
            right 0
    .chart-footer
        position absolute
        bottom 0
        height 1rem
        width 100%
        background lineargradient(#fff0, #ebebebbf)

    #powerGrid
        height 100%
        display grid
        grid-template-columns repeat(6, 1fr)
        grid-template-rows repeat(21, 3rem)
        grid-gap 0.1rem
        overflow-y auto
        text-align center
        text-size 10
        padding: 2rem 2rem 0 2rem
        .pivot
            background-color transparent
            color $darkColor
            padding 0.2rem
            padding-top 30%
            margin-right: 0.5rem
        .header
            background-color transparent 
            color $darkColor
            padding 0.2rem
            margin-bottom: 1rem
            font-weight: bold
        
        .archBtn
            padding 0.2rem
            margin 0.2rem
            font-weight: bold
            border-radius 0.2rem
            &:hover
                cursor pointer
                color $darkColor !important
                background-color $accentColor !important
        .winrate
            color #999
            font-weight: normal
            padding: 0.2rem
            padding-top: 25%
        .blank
            background-color $darkColor
            margin: 0.2rem
            opacity 0.3
        .columnTitle
            grid-column-end: span 2; 
            
