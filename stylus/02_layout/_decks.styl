




#decksWindow
    .overlay
        img 
            margin-left 20%
    .content-header
        .ftrOptions
            position absolute
            left 0
            #classFolder
                visibility hidden
        .displayOptions
            position absolute
            right 0
    .content
        display flex
        flex-flow row
        justify-content space-between
        .content-left
            width 10rem
            .selectionWrapper
                width 10rem
                height 12rem
                margin-top 1rem
                .buttonWrapper
                    position absolute
                    width 12rem
                    margin-left 0.5rem
                    margin-top 1.1rem
                    line-height 2rem
                    visibility hidden
                    .selectionBtn
                        font-size 1rem
                        display inline-block
                        background-color $accentColor
                        padding 0.2rem
                        margin-left 0.2rem
                        border-radius 0.2rem
                        line-height normal
                        &:hover
                            background-color $darkColor !important
                            color $accentColor !important
                            cursor pointer
                        &:active
                            background-color yellow !important
                .imgWrapper
                    position absolute
                    height 12rem
                    .selectionImg
                        position absolute
                        width 10rem
                        padding-left 0.5rem
                    .selectionTitle
                        font-size 1.2rem
                        position absolute
                        left 3rem
                        bottom 0
                        color white
                        font-weight bold
                &:hover
                    .buttonWrapper
                        visibility visible
                    .selectionImg
                        opacity 0.1
                    .selectionTitle
                        color black
                        
        .content-right
            width 10rem
            
        .sidebar
            // margin-left 0.5rem
            //margin-top 2rem
            width 10rem
            &.left
                padding-left 0.5rem
            &.right
                padding-right 0.5rem
            .title
                margin-bottom: 1rem
                margin-top: 1rem
                font-weight: bold
                font-size: 1.1rem
                color $darkColor
            .archBtnList
                width 100%
                .archBtnWrapper
                    width 100%
                    margin-top 1rem
                    position relative
                    border-radius 0.2rem
                    font-size 80%
                    .archBtn
                        display inline-block
                        padding 0.1rem 0.2rem
                        width 60%
                        border solid #ffffff42
                        border-radius 0.2rem
                        &:hover
                            cursor pointer
                            color $darkColor !important
                            background-color $accentColor !important
                    .wrDiv
                        font-weight bold
                        color #5a5959
                        padding-top 0.25rem
                        padding-right 0.3rem
                        display inline-block
                        float right
                        width 25%
                    &.highlighted
                        background-color $darkColor
                        .archBtn
                            padding-top 0.5rem
                            padding-bottom 0.5rem
                        .wrDiv
                            color $lightColor
                            padding-top 0.65rem
                            padding-bottom 0.5rem
                            
        .content-middle
            //.decklists has own .styl file
            margin-left 1rem
            margin-right 1rem
            .chart
                display none
                width 100%
                height 100%
            
            .descriptionBox
                height $cont-height - 1rem
                padding 1rem
                overflow-y: auto
                .description
                    background-color white
                    color black
                    padding 2rem
                    letter-spacing: 1.2px;
                    font-size: 0.9rem
                    font-weight: normal
                    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                    text-indent: 20px; 
                    .text
                        background-color white
                        &::first-letter
                            font-size: 200%  
                    .title                          
                        font-size: 150%
                        font-weight: bold
                        margin-bottom: 1rem
            

            
            