


.decklists
    display: none
    display grid 
    grid-column-gap 1.5rem
    margin-top 2.5rem
    height 90%
    //background-color blue
    position relative
    .deckBox
        //background-color blue
        height 100%
        .deckTitle
            display inline-block
            width 100%
            p
                padding 0.3rem
                display inline-block
                
            &:hover
                background-color:  $accentColor
                color $darkColor
        .decklist
            height 80%
            margin-top: 1rem
            margin-bottom: 1rem
            overflow-y auto
            overflow-x hidden
            background-color: white
            .card
                padding 0.05rem
                .costContainer
                    position relative
                .hex
                    position fixed
                    font-size 140%
                    position absolute
                    color $darkColor
                    opacity 0.5
                .cost
                    color $lightColor
                    position absolute
                    padding 0.30rem 0 0 0.35rem
                .name
                    padding 0.25rem 0.1rem 0 1.7rem
                    display inline-block
                .quantity
                    float right
                    padding 0.25rem 0.25rem 0 0
                    display inline-block
                    z-index 10
                    background-color white
                    font-size: 85%
                    color $darkColor
                    opacity: 0.5
                &:hover
                    background-color:  $midColor  
                    color: $lightColor
            
        .copyDL
            color black
            background-color #92fc64
            font-size: 1rem
            font-weight: bold
            padding 0.3rem
            margin 0 auto
            border 0.1rem solid #92fc64
            border-radius 3%
            &:hover
                background-color: #b7ff54
                border-color: #b7ff54
                cursor:  pointer


