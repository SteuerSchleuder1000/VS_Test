button
    border: 0
    background: #222222
    //padding: 0.7rem
    color: white
    &::before
        content: ""
body
    

        .main-wrapper
            max-width: 800px
            height: 800px
            margin: 10px auto
            display: flex
            flex-direction: column
            .navbar
                display: flex
                align-content: center
                justify-content: start
                z-index: 10000
                .tabs
                    display: flex
                    height: 100%
                    align-content: center
                    align-items: center
                    justify-content: center
                    background: #222
                    //padding: 0.5rem
                    border-radius: 0.2rem
                    .tab
                        padding: 0.2rem 0.2rem 0.2rem 0.2rem
                        margin: 0.25rem
                        font-size: 1.5rem
                        font-family: Tahoma
                        font-weight: bold
                        letter-spacing: 2px
                        transition: background 0.3s ease, color 0.3s ease
                        border-radius: 2%
                        &:hover
                            cursor: pointer
                        &.highlighted
                            background: white
                            color: #222
                .options
                    display: flex
                    background: white
                    margin: 0 0 0 10%
                    button
                        font-weight: bold
                    .option
                        display: flex
                        flex-direction: column
                        position: relative
                        justify-content: flex-end
                        margin: 0 0 0 5px
                        

                            
                        .optionBtn
                            background: white
                            color: #666
                            border: 0.1rem solid #666
                            border-radius: 5%
                            padding: 0.4rem
                            transition: background 0.3s ease, color 0.3s ease
                            &:hover
                                cursor: pointer
                                background: #222
                                color: white
                        .dropdown
                            position: absolute
                            top: 100%
                            display: flex
                            flex-direction: column
                            background: #222
                            overflow: hidden
                            
                            button
                                transition: margin 0.1s ease

                                &:hover
                                    background: white
                                    color: #222222
                                    border: 1px solid #222
                                
                            &.hidden button
                                margin-top: -2000px
                    .detail-toggle
                        height: 3rem
            .content-wrapper
                margin: 1% 0% 0% 1%
                .content
                    display: flex
                    flex-direction: column
                    color: white
                    .chart
                        background-color: #222
                        display: none
                        .content-header
                            width: 100%
                            margin-top: 0.6em
                            margin-bottom: 0.6em
                            font-size: 1em
                            background-color: #222
                            color: white
                            display: flex
                            flex-direction: row
                            justify-content: space-between
                            font-family: Tahoma
                            font-weight: bold
                            
                            .rankInfo
                                color: darkgray
                                margin-left: 1em

                            .windowInfo
                                font-size: 1.1em

                                span
                                    color: darkgray
                                    font-size: 0.7em
                                

                            .sortInfo
                                margin-right: 2em
                                

                        .content-footer
                            background-color: #222
                            color: white
                            display: flex
                            flex-direction: row
                            justify-content: space-between
                            font-family: Tahoma
                            font-weight: bold
                            margin-left: 2em
                            margin-right: 2em
                            margin-top: 0.6em
                            margin-bottom: 0.6em
                        