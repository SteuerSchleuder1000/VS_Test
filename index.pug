doctype html
html(lang='en')
  head
    link(rel="icon" href="Images/vsLogo.png")
    link(rel='apple-touch-icon-precomposed', size='57x57' href='Images/vsLogo57x57.png')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    script(src='https://www.gstatic.com/firebasejs/4.3.0/firebase.js')
    script(src='https://cdn.plot.ly/plotly-latest.min.js')
    script(src='https://cdn.jsdelivr.net/npm/clipboard@1/dist/clipboard.min.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    //link(rel='stylesheet', href='reset.css')
    link(rel='stylesheet', href='css/styles.css')
    title VS
  body
    .main-wrapper
      #overlay
        p.overlayText
      nav.navbar
        #mobileFolder.option-folder
          button#mobileBtn.folder-toggle.fa.fa-bars
          .dropdown.hidden
            button#ladder.mobileBtn.optionBtn.folderBtn Overview
            button#power.mobileBtn.optionBtn.folderBtn Tier List
            button#table.mobileBtn.optionBtn.folderBtn Matchups
            button#decks.mobileBtn.optionBtn.folderBtn Decks
            button#info.mobileBtn.optionBtn.folderBtn Info
        .tabs
          button#ladder.tab Overview
          button#power.tab Tier List
          button#table.tab Matchups
          button#decks.tab Decks
          button#info.tab info
        #vsLogoDiv
          img(src="Images/vsGoldLogo.png").logo
          //p.text Live
      .content-wrapper
        #loader
        #ladderWindow.tabWindow
          .content-header
            .ftrOptions.optionBar
              #formatFolder.option-folder
                button#formatBtn.folder-toggle Standard
                .dropdown.hidden
              #timeFolder.option-folder
                button#timeBtn.folder-toggle Last Day
                .dropdown.hidden
              #rankFolder.option-folder
                button#rankBtn.folder-toggle All Ranks
                .dropdown#rankDropdown.hidden
              p.nrGames
            .classDeckOptions.optionBar
              button#classes.optionBtn Classes
              button#decks.optionBtn Decks
            #plotFolder.option-folder
              button#plotBtn.folder-toggle.fa.fa-bar-chart
              .dropdown#plotDropdown.hidden
                button#bar.optionBtn.folderBtn.fa.fa-bar-chart
                button#line.optionBtn.folderBtn.fa.fa-line-chart
                button#pie.optionBtn.folderBtn.fa.fa-pie-chart
                button#number.optionBtn.folderBtn.fa.fa-percent
                button#timeline.optionBtn.folderBtn.fa.fa-clock-o
            .graphOptions.optionBar
              button#bar.optionBtn.fa.fa-bar-chart.tooltip
                span.tooltipText Show Bar Chart
              button#line.optionBtn.fa.fa-line-chart.tooltip
                  span.tooltipText Show Line Chart
              button#pie.optionBtn.fa.fa-pie-chart.tooltip
                  span.tooltipText Show Pie Chart
              button#number.optionBtn.fa.fa-percent.tooltip
                  span.tooltipText Show Numbers
              button#timeline.optionBtn.fa.fa-clock-o.tooltip
                  span.tooltipText Show Timeline
          .overlay
            p.overlayText
          .content
            p.graphTitle.chart-header
            .question.fa.fa-question-circle
            p.graphLabel
            #chart1.chart
            .chart-footer
          .content-footer
          
        #powerWindow.tabWindow
          .content-header
            .formatOptions.optionBar
              button#Standard.optionBtn Standard
              button#Wild.optionBtn Wild
            .dispOptions.optionBar
              button#tiers.optionBtn Tier Lists
              button#top.optionBtn Suggestions
          .overlay
            p.overlayText
          .content
            .question.fa.fa-question-circle
            #powerGrid.chart
            .chart-footer
          .content-footer
          
            
        #tableWindow.tabWindow
          .content-header
            .ftrOptions.optionBar
              #formatFolder.option-folder
                button#formatBtn.folder-toggle Standard
                .dropdown.hidden
              #timeFolder.option-folder
                button#timeBtn.folder-toggle Last Month
                .dropdown.hidden
              #rankFolder.option-folder
                button#ranksBtn.folder-toggle All Ranks
                .dropdown.hidden
              p.nrGames
            .graphOptions.optionBar
              p Sort 
              #sortFolder.option-folder
                button#sortBtn.folder-toggle Sort
                .dropdown.hidden
          .overlay
            p.overlayText
          .content
            //p.graphTitle Versus
            .question.fa.fa-question-circle
            #chart2.chart
            .chart-footer
              .download
                button.downloadTable Download Table
                  .fa.fa-cloud-download
          .content-footer
        #decksWindow.tabWindow
          .content-header
            .ftrOptions.optionBar
              .option-folder
                button#formatBtn.folder-toggle Standard
                .dropdown.hidden
                  button#Standard.optionBtn.folderBtn Standard
                  button#Wild.optionBtn.folderBtn Wild
              .option-folder
                button#classBtn.folder-toggle Druid
                .dropdown.hidden
                  button#Druid.optionBtn.folderBtn Druid 
                  button#Hunter.optionBtn.folderBtn Hunter 
                  button#Mage.optionBtn.folderBtn Mage
                  button#Paladin.optionBtn.folderBtn Paladin
                  button#Priest.optionBtn.folderBtn Priest
                  button#Rogue.optionBtn.folderBtn Rogue
                  button#Shaman.optionBtn.folderBtn Shaman
                  button#Warlock.optionBtn.folderBtn Warlock
                  button#Warrior.optionBtn.folderBtn Warrior
            .displayOptions.optionBar
              button#description.optionBtn Description
              button#decklists.optionBtn Deck Lists
              //button#classRadar.optionBtn Class Radar
          .overlay
            p.overlayText
          .content
            .question.fa.fa-question-circle
            .archetypes
              p.title Archetypes
              .archetypeList
            .descriptionBox
              .description
            .decklists 
          .content-footer
            
          
        #infoWindow.tabWindow
          .content-header
          .content
            p 
            .login
              p Test login in with a VS account (vsProUser@vs.com - pw12345):
              input#emailInput(placeholder='Email')
              input#passwordInput(placeholder='Password')
              button#loginBtn Login
              button#logOutBtn.hidden Logout
              button#signUpBtn Sign Up
              p#loginErrorMsg
          .content-footer

